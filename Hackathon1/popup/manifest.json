{
    "manifest_version": 3,
    "name": "Tech Product Recommender",
    "version": "1.0",
    "description": "Get AI-powered recommendations for tech products based on your specific needs.",
    "icons": {
      "128": "images/icon.png"
    },
    "permissions": [
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "images/icon.png"
    },
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }
  